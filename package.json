{
	"name": "luogu-on-vscode",
	"displayName": "luogu-on-vscode",
	"description": "luogu",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:luogu-on-vscode.helloWorld",
		"onCommand:luogu-on-vscode.showranking",
		"onCommand:luogu-on-vscode.search"
		
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "luogu-on-vscode.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "luogu-on-vscode.showranking",
				"title": "Show Ranking"
			},
			{
				"command": "luogu-on-vscode.search",
				"title": "洛谷：搜索"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "luogu",
					"title": "洛谷",
					"icon": "./calendar.svg"
				}
			]
		},
		"views": {
			"luogu": [
				{
					"id": "luogu.views.program",
					"name": "题目"
				},
				{
					"id": "luogu.views.problem-sets",
					"name": "题单"
				},
				{
					"id": "luogu.views.contests",
					"name": "比赛"
				},
				{
					"id": "luogu.views.discussions",
					"name": "讨论"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"request": "^2.88.2",
		"request-promise": "^4.2.6"
	}
}
