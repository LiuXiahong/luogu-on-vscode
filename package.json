{
	"name": "luogu",
	"displayName": "luogu",
	"description": "luogu",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "luogu.ShowRankingList",
				"title": "Show Ranking list",
				"icon": {
					"light": "./resources/svg/list-light.svg",
					"dark": ""
				}
			},
			{
				"command": "luogu.Search",
				"title": "Search",
				"icon": {
					"light": "./resources/svg/search-light.svg",
					"dark": "./resources/svg/search-dark.svg"
				}
			},
			{
				"command": "luogu.SearchProblems",
				"title": "Search Problems",
				"icon": {
					"light": "./resources/svg/search-light.svg",
					"dark": "./resources/svg/search-dark.svg"
				}
			},
			{
				"command": "luogu.SearchProblemsSets",
				"title": "Search Problems Sets",
				"icon": {
					"light": "./resources/svg/search-light.svg",
					"dark": "./resources/svg/search-dark.svg"
				}
			},
			{
				"command": "luogu.SearchUsers",
				"title": "Search Users",
				"icon": {
					"light": "./resources/svg/search-light.svg",
					"dark": "./resources/svg/search-dark.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "luogu",
					"title": "洛谷",
					"icon": "./resources/svg/beaker.svg"
				}
			]
		},
		"views": {
			"luogu": [
				{
					"id": "luogu.views.user",
					"name": "用户"
				},
				{
					"id": "luogu.views.program",
					"name": "题目"
				},
				{
					"id": "luogu.views.problem-sets",
					"name": "题单"
				},
				{
					"id": "luogu.views.discussions",
					"name": "讨论"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "luogu.Search",
					"when": "view == luogu.views.user",
					"group": "navigation"
				},
				{
					"command": "luogu.ShowRankingList",
					"when": "view == luogu.views.user",
					"group": "navigation"
				},
				{
					"command": "luogu.SearchProblems",
					"when": "view == luogu.views.program",
					"group": "navigation"
				},
				{
					"command": "luogu.SearchProblemsSets",
					"when": "view==luogu.views.problem-sets",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"request": "^2.88.2",
		"request-promise": "^4.2.6",
		"showdown": "^1.9.1",
		"silly-datetime": "^0.1.2"
	}
}
